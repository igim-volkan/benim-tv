rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated and is the admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "voleksi@gmail.com";
    }

    // Movies Collection
    // - Everyone can read (to see the list)
    // - Only authenticated admins can write (add, edit, delete, approve)
    match /movies/{movieId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Suggestions Collection
    // - Everyone can create a suggestion (public form)
    // - Only authenticated admins can read all suggestions or delete them
    match /suggestions/{suggestionId} {
      allow create: if true;
      allow read, delete, update: if isAdmin();
    }
    
    // Blog Posts Collection
    // - Everyone can read
    // - Only authenticated admins can write
    match /blog_posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders Collection
    // - Everyone can create an order (public checkout)
    // - Only authenticated admins can read all orders or update/delete them
    match /orders/{orderId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
  }
}
